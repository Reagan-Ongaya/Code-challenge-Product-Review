source "https://rubygems.org"

# An Object-relational mapper
# https://guides.rubyonrails.org/active_record_basics.html
gem "activerecord", "~> 6.1"

# Configures common Rake tasks for the purporse of working with Active Record
# https://github.com/sinatra-activerecord/sinatra-activerecord
gem "sinatra-activerecord"
# Common tasks  runned from command line
# https://github.com/ruby/rake
gem "rake"
# Functional interact with a SQLite3 database
# https://github.com/sparklemotion/sqlite3-ruby
gem "sqlite3", "~> 1.4"

# Require all files in a folder
# https://github.com/jarmo/require_all
gem "require_all"
# Gems used when we are running  application locally
group :development do
# Seed data generation
  # https://github.com/faker-ruby/faker
  gem "faker", "~> 2.18"

    gem "pry"
  end
